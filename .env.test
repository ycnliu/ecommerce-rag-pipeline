# Test environment configuration for MPS (Apple Silicon)
DEVICE=mps
LOG_LEVEL=INFO

# CLIP Model Configuration
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
SENTENCE_MODEL_NAME=all-MiniLM-L6-v2

# LLM Configuration (using local or mock for testing)
LLM_PROVIDER=anthropic
LLM_MODEL_NAME=claude-3-haiku-20240307
LLM_API_TOKEN=test_token

# FAISS Configuration
FAISS_INDEX_TYPE=flat
FAISS_METRIC=cosine
