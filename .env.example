# E-commerce RAG Pipeline Environment Configuration

# Application Settings
APP_NAME="E-commerce RAG Pipeline"
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CLIP Embedding Settings
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
EMBEDDING_DIMENSION=512
DEVICE=  # Leave empty for auto-detection (cuda/cpu)
MODEL_CACHE_DIR=models/cache

# FAISS Vector Database Settings
FAISS_INDEX_TYPE=flat
FAISS_METRIC=l2
FAISS_NLIST=100
FAISS_NPROBE=10
FAISS_INDEX_PATH=models/product_index.faiss
FAISS_METADATA_PATH=models/product_metadata.pkl

# LLM Settings
LLM_PROVIDER=huggingface
LLM_MODEL_NAME=mistralai/Mixtral-8x7B-Instruct-v0.1
LLM_API_TOKEN=your_huggingface_token_here
LLM_BASE_URL=
LLM_MAX_TOKENS=300
LLM_TEMPERATURE=0.1

# Data Settings
DATA_CSV_PATH=data/amazon_com_ecommerce.csv
EMBEDDINGS_CACHE_PATH=models/embeddings_cache.npy

# Processing Settings
BATCH_SIZE=32
MAX_PROMPT_CHARS=6000
SEARCH_K_DEFAULT=5
SEARCH_K_MAX=50

# Security Settings
ALLOWED_ORIGINS=["*"]
MAX_FILE_SIZE_MB=10

# Logging Settings
LOG_FILE_PATH=logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=1 week